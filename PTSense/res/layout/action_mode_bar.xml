<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvActionModeCloseButton"
        style="?android:attr/actionModeCloseButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="16dip"
        android:clickable="true"
        android:drawableLeft="?android:attr/actionModeCloseDrawable"
        android:drawablePadding="8dip"
        android:focusable="true"
        android:paddingLeft="8dip"
        android:paddingRight="30dip"
        android:text="@string/done"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu" >
    </TextView>

</LinearLayout>