<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PTSense.Home" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar.Home</item>
    </style>

    <style name="Theme.PTSense" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.Light.ActionBar.Solid</item>
        <item name="android:actionBarTabStyle">@style/MyActionBar.TabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBar.TabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBar.TabTextStyle</item>
        <item name="android:actionBarWidgetTheme">@android:style/Theme.Holo</item>
        <item name="android:listSeparatorTextViewStyle">@style/MyListViewSeparator</item>
        <item name="android:textAppearanceListItem">?android:attr/textAppearanceMedium</item>
        <item name="android:textAppearanceListItemSmall">@style/MyTextAppearance.ListItem.Small</item>
        <item name="android:textAppearanceSmall">@style/MyTextAppearance.Small</item>
    </style>

    <style name="MyActionBar.Home" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="MyActionBar.TabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@color/actionbar_tab_bg</item>
    </style>

    <style name="MyActionBar.TabBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_bottom</item>
        <item name="android:divider">@drawable/list_divider_holo_dark</item>
    </style>

    <style name="MyActionBar.TabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_tab_text</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="MyListViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#33b5e5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:background">@drawable/list_section_divider_blue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyTextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorHintInverse</item>
    </style>

    <style name="MyTextAppearance.ListItem.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>